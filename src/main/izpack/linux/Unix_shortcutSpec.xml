<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>

  <programGroup defaultName="DigiBit"
  location="applications"/>

   <shortcut
     name="DigiBit"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="no"
     startup="no"
     target="/usr/bin/java"
     commandLine="-jar $INSTALL_PATH/digibit-exe.jar"
     initialState="normal"
     iconFile="$INSTALL_PATH/digibit48.png"
     workingDirectory="$INSTALL_PATH"
     type="Application"
     encoding="UTF-8"
     description="DigiBit">
   </shortcut>
   <shortcut
     name="Uninstall DigiBit"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="no"
     startup="no"
     target="/usr/bin/java"
     commandLine="-jar $INSTALL_PATH/Uninstaller/uninstaller.jar"
     initialState="normal"
     workingDirectory="$INSTALL_PATH"
     type="Application"
     encoding="UTF-8"
     description="Uninstall DigiBit">
   </shortcut>
</shortcuts>

