<shortcuts> 
   <programGroup defaultName="DigiBit" location="applications"/> 
   <shortcut name="DigiBit" 
             target="$INSTALL_PATH/digibit.exe" 
             description="DigiBit" 
             workingDirectory="$INSTALL_PATH"
             iconFile="$INSTALL_PATH/digibit.ico" 
             initialState="normal" 
             programGroup="yes"
             desktop="yes" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
    <shortcut name="Uninstall DigiBit ${project.version}" 
             target="$INSTALL_PATH/uninstaller/uninstaller.jar" 
             description="Uninstall DigiBit" 
             initialState="normal" 
             programGroup="yes"
             desktop="no" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
</shortcuts>